---
import type { CollectionEntry } from 'astro:content'

import ArticleTopBar from './ArticleTopBar.astro'

interface Props {
  article: CollectionEntry<'articles'>
}

const { data: { published, summary, title }, id } = Astro.props.article
---
<article
  class="h-feed card bg-base-100 shadow-lg hover:shadow-xl transition md:hover:-translate-y-0.5"
  transition:animate="initial"
  transition:name={id}
>
  <div class="card-body">
    <ArticleTopBar {published} />
    <a href={`/articles/${id}`}><h2 class="card-title text-3xl">{title}</h2></a>
    {summary && <p>{summary}</p>}
  </div>
</article>
