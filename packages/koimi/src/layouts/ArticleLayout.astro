---
import type { CollectionEntry } from 'astro:content'

import ArticleTopBar from '../components/article/ArticleTopBar.astro'
import BaseLayout from './BaseLayout.astro'

interface Props {
  article: CollectionEntry<'articles'>
}

const { data: { published, title }, id } = Astro.props.article
---

<BaseLayout>
  <article
    class="h-entry card bg-base-100 shadow-lg prose max-w-none"
    transition:animate="initial"
    transition:name={id}
  >
    <div class="card-body text-base">
      <ArticleTopBar {published} />
      <h1 class="card-title text-3xl">{title}</h1>
      <slot />
    </div>
  </article>
</BaseLayout>
